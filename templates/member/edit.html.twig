{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - {{ member.displayName }} {% endblock %}

{% block stylesheets -%}
{{ parent() }}
{{ encore_entry_link_tags('member') }}
{% endblock %}

{% block body %}
{% embed '_page_header.html.twig' %}
{% block page_header_title %}{{ member.displayName }}{% endblock %}
{% endembed %}

{% include 'member/_badges.html.twig' %}

{% include 'member/_nav.html.twig' %}

{{ form_start(form) }}
{% include 'member/_form.html.twig' %}
<div class="row mb-3">
  <div class="col">
    <a href="{{ path('member_delete', {localIdentifier: member.localIdentifier}) }}" class="btn btn-link text-danger"><i class="fas fa-trash fa-fw"></i>Delete</a>
  </div>
  <div class="col text-end">
    <button class="btn btn-primary">{{ button_label|default('Update') }}</button>
  </div>
</div>
{{ form_rest(form) }}
{{ form_end(form) }}
{% endblock %}

{% block javascripts %}
{{ parent() }}
{{ encore_entry_script_tags('member') }}
{% endblock %}
