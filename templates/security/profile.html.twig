{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Edit Profile{% endblock %}

{% block body %}
{% embed '_page_header.html.twig' %}
{% block page_header_title %}Edit Profile{% endblock %}
{% endembed %}

{{ form_start(form) }}
<div class="card mb-3 shadow" style="max-width:40rem">
  <div class="card-body">
    {{ form_row(form.name) }}
    {{ form_row(form.email) }}
    {{ form_row(form.timezone) }}
  </div>
  <div class="card-footer text-end">
    <button class="btn btn-primary">{{ button_label|default('Update') }}</button>
  </div>
</div>
{{ form_rest(form) }}
{{ form_end(form) }}
{% endblock %}

{% block javascripts %}
{{ parent() }}
{% endblock %}
